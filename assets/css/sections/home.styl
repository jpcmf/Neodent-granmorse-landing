  min-height 700px
  padding-bottom 58px
  padding-top 42px

  .container ~ .container
    margin-top -70px

  h3
    color $brand-primary
    font-size: 38px
    display inline-block
    margin-bottom 15px

  h4
    font-size 18px

  .btn
    margin-bottom 50px
    margin-top 370px
    position relative
    z-index 200

  @media (min-width: $screen-sm-min)
