//
// main contato
//

.main-contato
  background-color #e7e7e8
  padding 47px 0

  h3
    color $brand-primary
    font-size 38px
    display inline-block
    margin-bottom 15px

  h4
    font-size 18px

  form
    margin-top 30px

    .form-name
      margin-bottom 15px
      @media (min-width: $screen-sm-min)
        margin-bottom 0

    ul.list-inline
      margin 0
      li
        display block
        @media (min-width: $screen-sm-min)
          display inline-block
        label
          margin 0

    .btn
     float right
     font-size 18px
     padding 8.5px 26px 6.5px 26px

//
// main lancamento
//

.main-lancamento
  background-color #b49600
  padding-top 51px
  padding-bottom 81px

  h3
    color #fff
    font-size 34px
    margin-bottom 30px

  .btn
    font-size 18px
    padding 8.5px 26px 6.5px 26px

  @media (min-width: $screen-sm-min)
    h3
      font-size 48px

//
// main social
//

.main-social
  padding-top 13px
  padding-bottom 7px
  text-align center

  @media (min-width: $screen-md-min)
    text-align left

  figure > img
    margin auto
    @media (min-width: $screen-md-min)
      margin 0

  .list-inline
    li
      padding-left 10px
    @media (min-width: $screen-md-min)
      float right
      margin-top: 30px
      margin-bottom 0

  .sprite
    background-image url('../img/sprite-social.png')
    background-repeat no-repeat
    display block
    height 20px
    width 22px

  .sprite.facebook
    background-position -29px -28px
  .sprite.twitter
    background-position -74px -28px
  .sprite.youtube
    background-position -120px -28px
  .sprite.linkedin
    background-position -165px -28px
