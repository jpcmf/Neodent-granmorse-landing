//
// main welcome
//

.main-welcome
  // background url('../img/img-top-featured.jpg') no-repeat top center
  background-image: url('../img/img-top-featured.jpg')
  background-size: cover
  background-position: center top
  background-repeat: no-repeat
  height 100vh

.main-welcome__featured-text
  h1
  h2
    color #fff
  h1
    font-size 28px
    margin 0
  h2
    font-size 24px
    margin-bottom 0
    margin-top 5px

.main-welcome__watch
  color #fff
  font-family 'KonsensBold'
  font-size 18px
  margin-top 23px
  &:active
  &:visited
    color #fff !important

  img
    margin-right 16px

.main-welcome__watch:hover
  color #fff

.main-welcome__watch:focus
  color #fff

.main-welcome__arrow-down
  // margin-top 140px
  position relative
  top 140px
  img
    height 25px
    width 42px

//
// main sticky menu
//

.main-sticky
  background-color $brand-primary
  min-height 80px
  position -moz-sticky
  position -ms-sticky
  position -o-sticky
  position -webkit-sticky
  position sticky
  top 0
  z-index 300

.main-sticky__button-left
  // border 1.5px solid #fff
  // border-radius 100px
  // color #fff
  font-family 'KonsensSemibold'
  margin-top 20px
  padding 9px 26px 7px
  @media (min-width: $screen-sm-min)
    padding 8px 26px

.main-sticky .navbar-default
  background-color $brand-primary

.navbar-sticky .nav
  text-align center
  li
    @media (min-width: $screen-sm-min)
      margin-left 7px
    a
      margin-bottom 10px
      @media (min-width: $screen-sm-min)
        margin-bottom 0

.navbar-sticky .nav li:last-child a
  background-color #fff
  color $brand-primary

